<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/light_gray"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:background="@color/blue"
        android:weightSum="2"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="match_parent"
            android:layout_weight="1.7"
            android:src="@drawable/back"
            android:id="@+id/back"
            android:layout_gravity="center|start"
            android:layout_height="wrap_content" />

        <android.support.v7.widget.AppCompatTextView
            android:layout_width="match_parent"
            android:text="Washroom"
            android:textStyle="bold"
            android:layout_marginBottom="3dp"
            android:textSize="18sp"
            android:typeface="serif"
            android:paddingTop="5dp"
            android:layout_weight=".3"
            android:layout_marginTop="5dp"
            android:layout_gravity="center|start"
            android:textColor="@color/white"
            android:layout_height="40dp" />

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:translationZ="1dp"
            android:elevation="1dp"
            android:translationX="1dp"
            android:layout_margin="5dp"
            android:background="@color/white"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:weightSum="2"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="7dp"
                android:layout_height="wrap_content">



        <TextView
            android:layout_width="match_parent"
            android:layout_marginLeft="5dp"
            android:layout_weight=".4"
            android:typeface="serif"
            android:textSize="14sp"
            android:text="3 Bath Towels"
            android:textColor="@color/black"
            android:layout_marginBottom="5dp"
            android:layout_height="wrap_content" />

                <ImageView
                    android:layout_width="match_parent"
                    android:src="@drawable/green_bookmark"
                    android:layout_gravity="end"
                    android:layout_weight="1.6"
                    android:layout_marginLeft="20dp"
                    android:contentDescription="@null"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_gravity="end"
            android:weightSum="2"
            android:layout_marginBottom="10dp"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="wrap_content">

                <android.support.v7.widget.AppCompatTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_marginLeft="20dp"
                android:translationZ="1dp"
                android:elevation="1dp"
                android:translationX="1dp"
                android:layout_height="wrap_content">

                <android.support.v7.widget.CardView
                    android:layout_width="wrap_content"
                    android:elevation="5dp"
                    android:translationZ="1dp"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    app:cardCornerRadius="5dp"
                    android:padding="10dp"
                    android:layout_height="wrap_content">

<android.support.v7.widget.AppCompatTextView
    android:layout_width="wrap_content"
    android:text="YES"
    android:typeface="serif"
    android:textSize="14sp"
    android:textStyle="bold"
    android:padding="5dp"
    android:drawablePadding="5dp"
    android:drawableLeft="@drawable/green_check"
    android:background="@color/light_gray"
    android:id="@+id/yes1"
    android:textColor="@color/dark_gray"
    android:layout_height="wrap_content" />
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="wrap_content"
                    android:elevation="5dp"
                    android:translationZ="1dp"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    app:cardCornerRadius="5dp"
                    android:padding="10dp"
                    android:layout_marginLeft="20dp"
                    android:layout_height="wrap_content">

                    <android.support.v7.widget.AppCompatTextView
                        android:id="@+id/no1"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:background="@color/red"
                        android:drawableLeft="@drawable/white_cross"
                        android:drawablePadding="5dp"
                        android:padding="5dp"
                        android:text="NO"
                        android:textColor="@color/dark_gray"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:typeface="serif" />
                </android.support.v7.widget.CardView>


            </LinearLayout>
        </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_margin="5dp"
            android:translationZ="1dp"
            android:elevation="1dp"
            android:translationX="1dp"
            android:background="@color/white"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:weightSum="2"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="7dp"
                android:layout_height="wrap_content">



                <TextView
                    android:layout_width="match_parent"
                    android:layout_marginLeft="5dp"
                    android:layout_weight=".4"
                    android:typeface="serif"
                    android:textSize="14sp"
                    android:textColor="@color/black"
                    android:text="1 Bottle of Shampoo"
                    android:layout_marginBottom="5dp"
                    android:layout_height="wrap_content" />

                <ImageView
                    android:layout_width="match_parent"
                    android:src="@drawable/yellow_bookmark"
                    android:layout_gravity="end"
                    android:layout_weight="1.6"
                    android:layout_marginLeft="20dp"
                    android:contentDescription="@null"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_gravity="end"
                android:weightSum="2"
                android:layout_marginBottom="10dp"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:layout_height="wrap_content">

                    <android.support.v7.widget.AppCompatTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_marginLeft="20dp"
                    android:translationZ="1dp"
                    android:elevation="1dp"
                    android:translationX="1dp"
                    android:layout_height="wrap_content">

                    <android.support.v7.widget.CardView
                        android:layout_width="wrap_content"
                        android:elevation="5dp"
                        android:translationZ="1dp"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        app:cardCornerRadius="5dp"
                        android:padding="10dp"
                        android:layout_height="wrap_content">

                        <android.support.v7.widget.AppCompatTextView
                            android:layout_width="wrap_content"
                            android:text="YES"
                            android:typeface="serif"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:padding="5dp"
                            android:drawablePadding="5dp"
                            android:drawableLeft="@drawable/white_check"
                            android:background="@color/green"
                            android:id="@+id/yes2"
                            android:textColor="@color/dark_gray"
                            android:layout_height="wrap_content" />
                    </android.support.v7.widget.CardView>

                    <android.support.v7.widget.CardView
                        android:layout_width="wrap_content"
                        android:elevation="5dp"
                        android:translationZ="1dp"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        app:cardCornerRadius="5dp"
                        android:padding="10dp"
                        android:layout_marginLeft="20dp"
                        android:layout_height="wrap_content">

                        <android.support.v7.widget.AppCompatTextView
                            android:id="@+id/no2"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:background="@color/light_gray"
                            android:drawableLeft="@drawable/white_cross"
                            android:drawablePadding="5dp"
                            android:padding="5dp"
                            android:text="NO"
                            android:textColor="@color/dark_gray"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:typeface="serif" />
                    </android.support.v7.widget.CardView>


                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_margin="5dp"
            android:background="@color/white"
            android:translationZ="1dp"
            android:elevation="1dp"
            android:translationX="1dp"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:weightSum="2"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="7dp"
                android:layout_height="wrap_content">



                <TextView
                    android:layout_width="match_parent"
                    android:layout_marginLeft="5dp"
                    android:layout_weight=".4"
                    android:text="3 Toilet Rolls"
                    android:typeface="serif"
                    android:textSize="14sp"
                    android:textColor="@color/black"
                    android:layout_marginBottom="5dp"
                    android:layout_height="wrap_content" />

                <ImageView
                    android:layout_width="match_parent"
                    android:src="@drawable/red_bookmark"
                    android:layout_gravity="end"
                    android:layout_weight="1.6"
                    android:layout_marginLeft="20dp"
                    android:contentDescription="@null"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <android.support.v7.widget.AppCompatTextView
                android:layout_width="match_parent"
                android:text="Comment"
                android:textColor="@color/dark_gray"
                android:textStyle="bold"
                android:typeface="serif"
                android:textSize="14sp"
                android:layout_marginBottom="3dp"
                android:layout_marginLeft="5dp"
                android:layout_height="wrap_content" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <android.support.v7.widget.AppCompatEditText
                        android:layout_width="match_parent"
                        android:background="@color/light_gray"
                        android:layout_margin="5dp"
                        android:paddingBottom="30dp"
                        android:paddingLeft="3dp"
                        android:typeface="serif"
                        android:textSize="14sp"
                        android:paddingTop="3dp"
                        android:paddingRight="3dp"
                        android:text="Toilet Roll is missing since last week"
                        android:layout_height="100dp" />

                </ScrollView>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_gravity="end"
                android:weightSum="2"
                android:layout_marginBottom="10dp"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:layout_height="wrap_content">

                    <android.support.v7.widget.AppCompatTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_marginLeft="20dp"
                    android:translationZ="1dp"
                    android:elevation="1dp"
                    android:translationX="1dp"
                    android:layout_height="wrap_content">

                    <android.support.v7.widget.CardView
                        android:layout_width="wrap_content"
                        android:elevation="5dp"
                        android:translationZ="1dp"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        app:cardCornerRadius="5dp"
                        android:padding="10dp"
                        android:layout_height="wrap_content">

                        <android.support.v7.widget.AppCompatTextView
                            android:layout_width="wrap_content"
                            android:text="YES"
                            android:typeface="serif"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:padding="5dp"
                            android:drawablePadding="5dp"
                            android:drawableLeft="@drawable/green_check"
                            android:background="@color/light_gray"
                            android:id="@+id/yes3"
                            android:textColor="@color/dark_gray"
                            android:layout_height="wrap_content" />
                    </android.support.v7.widget.CardView>

                    <android.support.v7.widget.CardView
                        android:layout_width="wrap_content"
                        android:elevation="5dp"
                        android:translationZ="1dp"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        app:cardCornerRadius="5dp"
                        android:padding="10dp"
                        android:layout_marginLeft="20dp"
                        android:layout_height="wrap_content">

                        <android.support.v7.widget.AppCompatTextView
                            android:id="@+id/no3"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:background="@color/light_gray"
                            android:drawableLeft="@drawable/white_cross"
                            android:drawablePadding="5dp"
                            android:padding="5dp"
                            android:text="NO"
                            android:textColor="@color/dark_gray"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:typeface="serif" />
                    </android.support.v7.widget.CardView>


                </LinearLayout>
            </LinearLayout>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_margin="5dp"
            android:translationZ="1dp"
            android:elevation="1dp"
            android:translationX="1dp"
            android:background="@color/white"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:weightSum="2"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="7dp"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_marginLeft="5dp"
                    android:layout_weight=".4"
                    android:text="3 Bath Towels"
                    android:typeface="sans"
                    android:textSize="14sp"
                    android:textColor="@color/black"
                    android:layout_marginBottom="5dp"
                    android:layout_height="wrap_content" />

                <ImageView
                    android:layout_width="match_parent"
                    android:src="@drawable/red_bookmark"
                    android:layout_gravity="end"
                    android:layout_weight="1.6"
                    android:layout_marginLeft="20dp"
                    android:contentDescription="@null"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <android.support.v7.widget.AppCompatTextView
                android:layout_width="match_parent"
                android:text="Comment"
                android:textColor="@color/dark_gray"
                android:textStyle="bold"
                android:typeface="serif"
                android:textSize="14sp"
                android:layout_marginBottom="3dp"
                android:layout_marginLeft="5dp"
                android:layout_height="wrap_content" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:orientation="vertical">

                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <android.support.v7.widget.AppCompatEditText
                android:layout_width="match_parent"
                    android:background="@color/light_gray"
                android:layout_margin="5dp"
                        android:paddingBottom="30dp"
                        android:paddingLeft="3dp"
                        android:typeface="serif"
                        android:textSize="14sp"
                        android:paddingTop="3dp"
                        android:text="Towel is missing in this room."
                        android:textColor="@color/black"
                android:layout_height="100dp" />

                </ScrollView>

            </LinearLayout>
        </LinearLayout>


        <android.support.v7.widget.AppCompatButton
            android:layout_width="match_parent"
            android:text="UPDATE"
            android:background="@color/blue"
            android:gravity="center"
            android:typeface="serif"
            android:id="@+id/save_btn"
            android:layout_gravity="center"
            android:layout_margin="40dp"
            android:textColor="@color/white"
            android:layout_height="wrap_content" />


    </LinearLayout>
    </ScrollView>
</LinearLayout>
